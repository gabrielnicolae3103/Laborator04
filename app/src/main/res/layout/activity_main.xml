<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/showAdditionalFields"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Show Additional Fields"></Button>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="name"></EditText>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:enabled="false"
                android:hint="nr de telefon"></EditText>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="email"></EditText>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="adresa postala"></EditText>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="2"
                android:rowCount="1">
                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:layout_row="0"
                    android:layout_column="0"></Button>
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:layout_row="0"
                    android:layout_column="1"></Button>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:id="@+id/secondContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <EditText
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="job title"></EditText>

            <EditText
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="company"></EditText>

            <EditText
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="website"></EditText>

            <EditText
                android:id="@+id/im"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="im"></EditText>
        </LinearLayout>
    </ScrollView>


</LinearLayout>